{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "allowJs": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "ts-node": {
    "files": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/experimental/*"]
}
